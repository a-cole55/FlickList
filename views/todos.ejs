    <option value="Action">Action</option>
    <option value="Horror">Horror</option>
    <option value="Romance">Romance</option>
    <option value="Comedy">Comedy</option>
  </select>
  <br><br>
  <input type="submit" value="Sort">
</form> -->
<div id="titles">
  <span class="tableHeader">Title:</span>
  <span class="tableHeader">Genre:</span>
  <span class='del'></span>
</div>
<ul>
  <% todos.forEach( el => { %>
          <li class='todoItem' data-id='<%=el._id%>'>
            <span class='pointer <%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
            <span class='pointer <%= el.completed === true ? 'completed' : 'not'%>'><%= el.genre %></span>
            <span class='pointer del'><i class="fa fa-trash-o" style="font-size:36px"></i></span>
          </li>
  <% }) %>
  </ul>

    <a id="logout" href="/logout">Logout</a>



    <script src="js/main.js"></script>
</body>
</html>